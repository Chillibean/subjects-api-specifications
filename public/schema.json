{
  "openapi": "3.0.0",
  "info": {
    "version": "1.1.0",
    "title": "Subjects API",
    "description": "This is the api specifications for all things related to subjects.",
    "contact": {
      "name": "ChilliPharm",
      "url": "https://www.chillipharm.com"
    }
  },
  "tags": [
    {
      "name": "Example",
      "description": "Example endpoints"
    }
  ],
  "servers": [
    {
      "url": "http://chillipharm.test:3000/api/v1",
      "description": "Local development"
    },
    {
      "url": "https://www.chillipharm.com/api/v1",
      "description": "Production"
    }
  ],
  "paths": {
    "/accounts/{account_id}/sites/{site_identifier}/subjects": {
      "get": {
        "summary": "Get all subjects for a site",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getSubjects",
        "description": "Get all subjects for a site",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "site_identifier",
            "in": "path",
            "description": "The site identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "SITE1"
            }
          }
        ],
        "tags": ["Subjects"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Subjects"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/accounts/{account_id}/sites/{site_identifier}/subjects/{subject_id}": {
      "get": {
        "summary": "Get a specific subject for a site",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getSubject",
        "description": "Get a specific subject for a site",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "site_identifier",
            "in": "path",
            "description": "The site identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "SITE1"
            }
          },
          {
            "name": "subject_id",
            "in": "path",
            "description": "The subject id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          }
        ],
        "tags": ["Subjects"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "schedule": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Event"
                      }
                    },
                    "subject": {
                      "$ref": "#/components/schemas/Subject"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "userSessionKey": {
        "type": "apiKey",
        "in": "cookie",
        "name": "user_session_key",
        "description": "User session key cookie"
      },
      "chillipharmSession": {
        "type": "apiKey",
        "in": "cookie",
        "name": "_chillipharm_session",
        "description": "ChilliPharm session cookie"
      }
    },
    "schemas": {
      "Subject": {
        "description": "A subject",
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "The subject id",
            "example": 1
          },
          "subject_number": {
            "type": "string",
            "description": "The serial number of the subject",
            "example": "E001004"
          },
          "current_study_event": {
            "type": "string",
            "description": "The study event the subject is currently in",
            "example": "DAY1",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "description": "Date time for when the subject was created",
            "example": "2024-01-02T11:06:48.566Z"
          }
        },
        "required": [
          "id",
          "subject_number",
          "current_study_event",
          "created_at"
        ],
        "additionalProperties": false
      },
      "Subjects": {
        "description": "A list of subjects",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Subject"
        }
      },
      "Contributor": {
        "description": "A role contributor",
        "type": "object",
        "properties": {
          "admin": {
            "description": "Whether the contributor is an admin",
            "type": "boolean",
            "example": true
          },
          "email": {
            "description": "The email of the contributor",
            "type": "string",
            "example": "fake@email.com"
          },
          "first_name": {
            "description": "The first name of the contributor",
            "type": "string",
            "example": "John"
          },
          "id": {
            "description": "The contributor id",
            "type": "number",
            "example": 1
          },
          "last_name": {
            "description": "The last name of the contributor",
            "type": "string",
            "example": "Doe"
          },
          "role": {
            "description": "The role of the contributor",
            "type": "object",
            "properties": {
              "id": {
                "description": "The role id",
                "type": "number",
                "example": 1
              },
              "name": {
                "description": "The name of the role",
                "type": "string",
                "example": "Power User"
              }
            }
          },
          "uuid": {
            "description": "The uuid of the contributor",
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426655440000"
          }
        },
        "required": ["id", "first_name", "last_name", "email"],
        "additionalProperties": false
      },
      "RoleDefinition": {
        "description": "A role definition",
        "type": "object",
        "properties": {
          "id": {
            "description": "The role definition id",
            "type": "number",
            "example": 1
          },
          "required": {
            "description": "Whether the role definition is required",
            "type": "boolean",
            "example": true
          },
          "role": {
            "description": "The role of the role definition",
            "type": "object",
            "properties": {
              "id": {
                "description": "The role id",
                "type": "number",
                "example": 1
              },
              "name": {
                "description": "The name of the role",
                "type": "string",
                "example": "Power User"
              }
            }
          }
        },
        "required": ["id", "required", "role"],
        "additionalProperties": false
      },
      "RoleDefinitionWithContributors": {
        "description": "A role definition",
        "type": "object",
        "properties": {
          "id": {
            "description": "The role definition id",
            "type": "number",
            "example": 1
          },
          "required": {
            "description": "Whether the role definition is required",
            "type": "boolean",
            "example": true
          },
          "contributors": {
            "description": "The contributors of the role definition",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contributor"
            }
          },
          "role": {
            "description": "The role of the role definition",
            "type": "object",
            "properties": {
              "id": {
                "description": "The role id",
                "type": "number",
                "example": 1
              },
              "name": {
                "description": "The name of the role",
                "type": "string",
                "example": "Power User"
              }
            }
          }
        },
        "required": ["id", "required", "contributors", "role"],
        "additionalProperties": false
      },
      "Protocol": {
        "description": "Protocol for a procedure/event",
        "type": "object",
        "properties": {
          "id": {
            "description": "The protocol id",
            "type": "number",
            "example": 1
          },
          "locked": {
            "description": "locked status of the protocol",
            "type": "boolean",
            "example": false
          },
          "name": {
            "description": "The name of the protocol",
            "type": "string",
            "example": "Ghost Protocol"
          },
          "study_event_display_name": {
            "description": "The display name of the study event",
            "type": "object",
            "properties": {
              "plural": {
                "description": "The plural display name of the study event",
                "type": "string",
                "example": "visits"
              },
              "singular": {
                "description": "The singular display name of the study event",
                "type": "string",
                "example": "visit"
              }
            }
          },
          "study_procedure_display_name": {
            "description": "The display name of the study procedure",
            "type": "object",
            "properties": {
              "plural": {
                "description": "The plural display name of the study procedure",
                "type": "string",
                "example": "assessments"
              },
              "singular": {
                "description": "The singular display name of the study procedure",
                "type": "string",
                "example": "assessment"
              }
            }
          },
          "study_procedure_role_definitions": {
            "description": "The role definitions of the study procedure",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RoleDefinition"
            }
          },
          "version_number": {
            "description": "The version number of the protocol",
            "type": "number",
            "example": 1
          }
        },
        "required": [
          "id",
          "name",
          "study_event_display_name",
          "study_procedure_display_name",
          "locked",
          "version_number",
          "study_procedure_role_definitions"
        ],
        "additionalProperties": false
      },
      "Procedure": {
        "description": "A procedure for an event",
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "The procedure id",
            "example": 1,
            "nullable": true
          },
          "date": {
            "type": "string",
            "description": "The date of the procedure",
            "example": "2024-01-02",
            "nullable": true
          },
          "display_name": {
            "type": "string",
            "description": "The display name of the procedure",
            "example": "North Star"
          },
          "identifier": {
            "type": "string",
            "description": "The identifier of the procedure",
            "example": "NSTAR"
          },
          "protocol": {
            "$ref": "#/components/schemas/Protocol"
          },
          "role_definitions": {
            "type": "array",
            "description": "The role definitions of the procedure",
            "items": {
              "$ref": "#/components/schemas/RoleDefinitionWithContributors"
            }
          },
          "status": {
            "type": "string",
            "description": "The status of the procedure",
            "example": "complete",
            "enum": [
              "not_started",
              "in_progress",
              "complete",
              "requires_attention",
              "not_required"
            ]
          }
        },
        "required": [
          "id",
          "identifier",
          "display_name",
          "date",
          "protocol",
          "role_definitions",
          "status"
        ],
        "additionalProperties": false
      },
      "Event": {
        "description": "A scheduled event for a subject",
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "description": "The date of the event",
            "example": "2024-01-02",
            "nullable": true
          },
          "display_name": {
            "type": "string",
            "description": "The display name of the event",
            "example": "Day 1"
          },
          "identifier": {
            "type": "string",
            "description": "The identifier of the event",
            "example": "DAY1"
          },
          "position": {
            "type": "number",
            "description": "The position of the event",
            "example": 1
          },
          "procedures": {
            "type": "array",
            "description": "The procedures for the event",
            "items": {
              "$ref": "#/components/schemas/Procedure"
            }
          },
          "protocol": {
            "$ref": "#/components/schemas/Protocol"
          },
          "status": {
            "type": "string",
            "description": "The status of the event",
            "example": "complete",
            "enum": [
              "not_started",
              "in_progress",
              "complete",
              "requires_attention",
              "not_required"
            ]
          },
          "study_arm": {
            "type": "string",
            "description": "The study arm of the event",
            "example": "Arm 1",
            "nullable": true
          },
          "study_event_type": {
            "type": "string",
            "description": "The study event type of the event",
            "example": "scheduled",
            "enum": ["scheduled", "unscheduled"]
          }
        },
        "required": [
          "identifier",
          "display_name",
          "date",
          "status",
          "procedures",
          "study_arm",
          "protocol",
          "study_event_type",
          "position"
        ],
        "additionalProperties": false
      },
      "Error": {
        "description": "An error",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The error message",
            "example": "Bad request. Missing or invalid input parameters."
          }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request. Missing or invalid input parameters.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized. Missing or invalid authentication credentials.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Conflict": {
        "description": "Conflict. The request could not be completed due to a conflict with the current state of the resource.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error. Please contact support.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFound": {
        "description": "Not found. The requested resource was not found.",
        "content": {
          "application/json": {
            "schema": {
              "description": "An error",
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "Not found",
                  "enum": ["Not found"]
                }
              },
              "required": ["error"],
              "additionalProperties": false
            }
          }
        }
      },
      "Forbidden": {
        "description": "Forbidden. The request was valid, but the server is refusing action.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "You do not have sufficient permission to perform this action",
                  "enum": [
                    "You do not have sufficient permission to perform this action",
                    "Forbidden"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
